<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.hrsys.dao.DepartmentDao">
  <!--部门结果集-->
  <resultMap id="DepartmentResultMap" type="com.example.hrsys.entity.Department">
    <!--@Table department-->
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="number" jdbcType="INTEGER" property="number" />
  </resultMap>
  <!--@mbg.generated-->
  <sql id="Base_Column_List">
    id, `name`, `number`
  </sql>
  <!--根据id查询部门-->
  <select id="selectById" parameterType="java.lang.Long" resultMap="DepartmentResultMap">
    select
    <include refid="Base_Column_List" />
    from department
    <where>
      id = #{id,jdbcType=BIGINT}
    </where>
  </select>
  <!--根据id删除部门-->
  <delete id="deleteById" parameterType="java.lang.Long">
    delete from department
      <where>
        id = #{id,jdbcType=BIGINT}
      </where>
  </delete>
  <!--新增部门-->
  <insert id="insert" keyColumn="id" keyProperty="id" parameterType="com.example.hrsys.entity.Department" useGeneratedKeys="true">
    insert into department
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="name != null">
        `name`,
      </if>
      <if test="number != null">
        `number`,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="name != null">
        #{name,jdbcType=VARCHAR},
      </if>
      <if test="number != null">
        #{number,jdbcType=INTEGER},
      </if>
    </trim>
  </insert>
  <!--根据id更新部门-->
  <update id="updateById" parameterType="com.example.hrsys.entity.Department">
    update department
    <set>
      <if test="name != null">
        `name` = #{name,jdbcType=VARCHAR},
      </if>
      <if test="number != null">
        `number` = #{number,jdbcType=INTEGER},
      </if>
    </set>
    where id = #{id,jdbcType=BIGINT}
  </update>
</mapper>